@page
@model WeatherApp.Pages.WeatherModel
@{
    ViewData["Title"] = "Väder";
    string Format(double? value, string unit) => value.HasValue ? $"{Math.Round(value.Value, 1)} {unit}" : "–";
}

<h2 class="mb-4">Väder – @Model.LocationName</h2>

<form method="get" class="mb-4">
    <div class="row g-3">
        <div class="col-md-3">
            <label for="City" class="form-label">Stad</label>
            <input type="text" name="City" id="City" value="@Model.City" class="form-control" placeholder="t.ex. Göteborg" />
        </div>
        <div class="col-md-2">
            <label for="Lat" class="form-label">Latitud</label>
            <input type="text" name="Lat" id="Lat" value="@Model.Lat" class="form-control" />
        </div>
        <div class="col-md-2">
            <label for="Lon" class="form-label">Longitud</label>
            <input type="text" name="Lon" id="Lon" value="@Model.Lon" class="form-control" />
        </div>
        <div class="col-md-3">
            <label for="LocationName" class="form-label">Platsnamn</label>
            <input type="text" name="LocationName" id="LocationName" value="@Model.LocationName" class="form-control" />
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Hämta väder</button>
        </div>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}
else if (Model.Summary is not null)
{
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">🌤 Aktuellt</h5>
                </div>
                <div class="card-body">
                    <p><strong>Temperatur:</strong> @Format(Model.Summary.CurrentTemperatureC, "°C")</p>
                    <p><strong>Vind:</strong> @Format(Model.Summary.CurrentWindSpeedMs, "m/s")</p>
                    <p><strong>Komfortindex:</strong> @Math.Round(Model.Summary.ComfortIndex, 0)</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">📊 Bearbetning (24h)</h5>
                </div>
                <div class="card-body">
                    <p><strong>Medeltemperatur:</strong> @Format(Model.Summary.AvgNext24hTempC, "°C")</p>
                    <p><strong>Medel luftfuktighet:</strong> @Format(Model.Summary.AvgNext24hHumidity, "%")</p>
                    <p><strong>PM2.5 (luftkvalitet):</strong> @Format(Model.Summary.AvgPm25, "")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <div class="card border-info shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">👕 Klädråd</h5>
            </div>
            <div class="card-body">
                <p class="mb-0">@Model.Summary.ClothingAdvice</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-secondary">Ingen data ännu. Klicka på "Hämta väder".</div>
}
